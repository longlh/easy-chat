<% for cols in [10, 12, 16] : %>
<h1>Fixed Grid System with <%= cols %> columns</h1>
<div class="gs-<%= cols %>">
	<% for size in [1..(cols - 1)] : %>
	<% times = Math.floor(cols / size) %>
	<% left = cols % size %>
	<div class="row">
		<% for col in [1..times] : %>
		<div class="col-<%= size %> bg-success">
			<span>col-<%= size %></span>
		</div>
		<% end %>

		<% if left > 0 : %>
		<div class="col-<%= left %> bg-warning">
			<span>col-<%= left %></span>
		</div>
		<% end %>
	</div>
	<br>
	<% end %>
</div>
<% end %>
<hr>
<% for cols in [10, 12, 16] : %>
<h1>Fluid Grid System with <%= cols %> columns</h1>
<div class="gs-<%= cols %> gs-fluid gs-padding">
	<% for size in [1..(cols - 1)] : %>
	<% times = Math.floor(cols / size) %>
	<% left = cols % size %>
	<div class="row">
		<% for col in [1..times] : %>
		<div class="col-<%= size %> bg-success">
			<span>col-<%= size %></span>
		</div>
		<% end %>

		<% if left > 0 : %>
		<div class="col-<%= left %> bg-warning">
			<span>col-<%= left %></span>
		</div>
		<% end %>
	</div>
	<br>
	<% end %>
</div>
<% end %>
