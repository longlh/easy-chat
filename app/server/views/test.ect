	</thead>
	<tbody>
		<% for row in [1..5] : %>
		<tr>
			<% for cell in [1..10] : %>
			<td>
				<span>Cell</span>
			</td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
