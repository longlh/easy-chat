<h1>Forms & Inputs</h1>
<h1>Stack Form</h1>
<div class="gs-12 gs-fluid gs-padding">
	<div class="row">
		<div class="col-4 form form-stack">
			<div class="form-group">
				<label class="label">Login</label>
				<span class="help">e.g. "Tyler Durden"</span>
				<div class="form-control">
					<input type="text" class="input input-single-line">
				</div>
			</div>
			<div class="form-group">
				<label class="label">Password</label>
				<div class="form-control">
					<input type="password" class="input input-single-line">
				</div>
			</div>
		</div>
		<div class="col-4 form form-stack">
			<div class="form-group">
				<label class="label">Gender</label>
				<span class="help">e.g. "Male"</span>
				<div class="form-control">
					<div class="radio">
						<input type="radio" id="cbx-gender-male" name="gender" checked>
						<label for="cbx-gender-male"><i></i><span>Male</span></label>
					</div>
					<div class="radio">
						<input type="radio" id="cbx-gender-female" name="gender">
						<label for="cbx-gender-female"><i></i><span>Female</span></label>
					</div>
				</div>
			</div>
		</div>
		<div class="col-4 form form-stack">
			<div class="form-group">
				<label class="label">Age</label>
				<span class="help">e.g. "20"</span>
				<div class="form-control">
					<select class="input input-single-line">
						<option>20</option>
						<option>21</option>
					</select>
				</div>
			</div>
		</div>
	</div>
</div>
