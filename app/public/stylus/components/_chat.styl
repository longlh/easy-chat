_CHAT_LIST_HEIGHT = 60px
_CHAT_LIST_PADDING = 10px
_CHAT_LIST_NOTIFICATON_WIDTH = 30px

_VISITOR_AVATOR_WIDTH = 40px

.chat-list
	li
		clearfix()
		height _CHAT_LIST_HEIGHT
		line-height _CHAT_LIST_HEIGHT
		cursor pointer

		& + li
			border-top 1px solid BORDER_COLOR

		.visitor-avatar
			float left
			margin-top ((_CHAT_LIST_HEIGHT - _VISITOR_AVATOR_WIDTH) / 2)
			margin-left _CHAT_LIST_PADDING
			text-align center
			font-size 24px

		.visitor-unread-message
			float right
			width _CHAT_LIST_NOTIFICATON_WIDTH
			margin-right _CHAT_LIST_PADDING
			color COLOR_WARNING
			text-align center
			font-weight 600

		.visitor-name
			overflow ellipsis
			margin-left (_CHAT_LIST_HEIGHT + _CHAT_LIST_PADDING * 2)
			margin-right (_CHAT_LIST_NOTIFICATON_WIDTH + _CHAT_LIST_PADDING * 2)
