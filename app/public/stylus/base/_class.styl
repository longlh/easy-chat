_BREAK = 20px

.cf
	clearfix()

.pull-left
	float left

.pull-right
	float right

.break
	size false _BREAK

	&.break-small
		size false (_BREAK / 2)

	&.break-large
		size false (_BREAK * 2)

	&.break-large-extra
		size false (_BREAK * 3)

.no-margin
	margin 0!important

.full-height
	height 100%!important

.bg-white
	background COLOR_WHITE

.bg-primary
	background COLOR_PRIMARY

.bg-primary-light
	background COLOR_PRIMARY_LIGHT

.bg-primary-dark
	background COLOR_PRIMARY_DARK

.bg-complete
	background COLOR_COMPLETE

.bg-complete-light
	background COLOR_COMPLETE_LIGHT

.bg-complete-dark
	background COLOR_COMPLETE_DARK

.bg-success
	background COLOR_SUCCESS

.bg-success-light
	background COLOR_SUCCESS_LIGHT

.bg-success-dark
	background COLOR_SUCCESS_DARK

.bg-danger
	background COLOR_DANGER

.bg-danger-light
	background COLOR_DANGER_LIGHT

.bg-danger-dark
	background COLOR_DANGER_DARK

.bg-warning
	background COLOR_WARNING

bg-warning-light
	background COLOR_WARNING_LIGHT

bg-warning-dark
	background COLOR_WARNING_DARK

.bg-passive
	background COLOR_PASSIVE

.bg-active
	background COLOR_ACTIVE

.scroll-x
	overflow-x auto

.scroll-y
	overflow-y auto
